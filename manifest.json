{
  "manifest_version": 3,
  "name": "Image Downloader & Converter",
  "version": "1.2",
  "description": "Download any image in JPG, PNG, WEBP, ICO, BMP, GIF formats.",
  "permissions": ["contextMenus", "downloads", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}