{
  "manifest_version": 3,
  "name": "Image Downloader & Converter",
  "version": "1.3",
  "description": "Download any image in JPG, PNG, WEBP, AVIF, BMP, GIF, TIFF, ICO formats.",
  "permissions": ["contextMenus", "downloads", "activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}   